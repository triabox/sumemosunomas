<section class="content-header">
  <h1 style="visibility: hidden;">Clase</h1>
  <ol class="breadcrumb">
    <li><a href="/"><i class="fa fa-pencil"></i>Curso <%= @clase.curso.nombre %></a></li>
    <li class="active pull">Clase <%= @clase.nombre %>
    </li>
  </ol>
</section>
<section class="content">
  <h1 style="color: #3c8dbc!important;">Clase <%= @clase.nombre %></h1>
  <div class="col-md-12">
    <p class="text-muted text-center col-md-offset-3 col-md-6" align="justify" style="font-size: large;">
      ¡Conocé toda la información que necesites sobre la clase que te interesa!
    </p>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <!-- Widget: user widget style 1 -->
      <div class="box box-widget widget-user-2">
        <div class="widget-user-header bg-blue">
          <div class="widget-user-image">
            <img src="<%= @clase.curso.user.user_image %>" class="img-circle" alt="User Avatar">
          </div>
          <h3 class="widget-user-username"><%= @clase.nombre %>
            <a style="float: right;">
              <% if es_profesor_de(@clase.curso) %><%= link_to "", edit_clase_path(@clase), class: 'fa fa-pencil-square-o', style: 'color: white; float:rigth;', 'data-no-turbolink' => false %>
              <% end %>
            </a>
          </h3>
          <h5 class="widget-user-desc"><%= @clase.curso.user.nameAndLastname %></h5>
        </div>
        <div class="box-footer no-padding">
          <ul class="nav nav-stacked">
            <li>
              <a href="#"><span class="fa fa-map-marker" aria-hidden="true"></span>
                <%= " " + @clase.curso.location.address.to_s %>
              </a>
            </li>
            <li>
              <a href="#"><span class="fa fa-calendar" aria-hidden="true"></span>
                <%= " " + @clase.fecha.strftime("%d/%m/%Y") %>
              </a>
            </li>
            <li>
              <a href="#"><span class="fa fa-clock-o" aria-hidden="true"></span>
                <%= " " + @clase.hora_inicio.strftime('%H:%M') + " - " + @clase.hora_fin.strftime('%H:%M') %>
              </a>
            </li>
            <li>
              <a href="#"><span class="fa fa-pencil" aria-hidden="true"></span>
                <%= "Curso: " + @clase.curso.nombre %>
              </a>
            </li>
          </ul>
          <div class="box-footer" align="justify">
            <ul class="nav nav-stacked">
              <li><strong><%= @clase.descripcion %></strong>
              </li>
              <li><%= @clase.contenido %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>