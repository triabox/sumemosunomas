<% provide(:title, 'Solicitar Recurso') %>
<section class="content-header">
  <ol class="breadcrumb">
    <li><%= link_to @curso, 'data-no-turbolink' => false do %><i class="fa fa-pencil"></i>Curso <%= @curso.nombre %>
      <% end %></li>
    <li class="active"><%= title %></li>
  </ol>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <div class="box box-primary col-md-6 col-md-offset-3 col-xs-12">
        <div class="box-body box-profile">
          <h1><%= title %></h1><br>
          <div class="form-horizontal">
            <%= form_for(@recurso) do |f| %>
                <div class="form-group has-feedback">
                  <%= f.label :nombre, "Nombre:", class: "control-label col-sm-3" %>
                  <div class="col-sm-9">
                    <%= f.text_field :nombre, class: 'form-control', placeholder: "Nombre" %>
                    <span class="fa fa-envelope form-control-feedback"></span>
                  </div>
                </div>
                <div class="form-group has-feedback">
                  <%= f.label :description, "Descripción:", class: "control-label col-sm-3" %>
                  <div class="col-sm-9">
                    <%= f.text_area :description, class: 'form-control', placeholder: "Breve descripción del material solicitado y cuenta por qué y para qué lo estas pidiendo!" %>
                    <span class="fa fa-envelope form-control-feedback"></span>
                  </div>
                </div>
                <div class="form-group has-feedback">
                  <%= f.label :tipe, "Tipo de material solicitado:", class: "control-label col-sm-3" %>
                  <div class="col-sm-9">
                    <%= f.text_field :tipe, class: 'form-control', placeholder: "Tipo de material solicitado" %>
                    <span class="fa fa-envelope form-control-feedback"></span>
                  </div>
                </div>
                <%= hidden_field_tag(:curso_id, @recurso.curso.id) %>
                <br>
                <div class="col-md-3 col-sm-12 col-md-offset-3">
                  <%= f.submit btn_label, class: "btn btn-danger " %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

