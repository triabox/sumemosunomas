                  </div>
                </div>
                <div class="form-group">
                  <br>
                  <div class="col-sm-offset-2 col-sm-3">
                    <%= f.submit "Aceptar", class: "btn btn-danger" %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
