<div class="form-horizontal">
  <%= render :partial => 'shared/error_messages', :locals => {:errors => user.errors} %>
  <div class="form-group has-feedback">
    <%= f.label :name, "Nombre:", class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: 'form-control', disabled: true, value: user.name %>
      <span class="fa fa-user form-control-feedback"></span>
    </div>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :lastname, "Apellido:", class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :lastname, class: 'form-control', disabled: true, value: user.lastname %>
      <span class="fa fa-user form-control-feedback"></span>
    </div>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :email, "Mail:", class: "control-label col-sm-2" %>
    <div class="col-sm-5"><%= f.email_field :email, class: 'form-control', disabled: true, value: user.email %>
      <span class="fa fa-envelope form-control-feedback"></span></div>
  </div>
  <div class="form-group has-feedback">
    <%= f.label :phone, "Celular:", class: "control-label col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :phone, class: 'form-control', placeholder: "Celular", value: user.phone %>
      <span class="fa fa-user form-control-feedback"></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location, "DirrecciÃ³n:", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= fields_for :location do |location| %>
          <%= render :partial => 'locations/basic_data_location.html', :locals => {:location_value => user.location, :location => location} %>
      <% end %>
    </div>
  </div>
</div>

