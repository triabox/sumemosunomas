<section class="content">
  <!-- Info boxes -->
  <% if users.any? %>
      <div class="col-md-12">
        <div class="row col-md-offset-1 col-md-10 col-sm-12">
          <ul class="users-list box-usuarios-becados clearfix" style="text-align: center; justify-content: center;">
            <% users.each do |user| %>
                <li class="becados center-block">
                  <%= link_to user, id:'sin-subrayar', 'data-no-turbolink' => false do %>
                      <img src="<%= user.user_image %>" alt="User Image" style="margin-bottom: 10px">
                      <div class="users-list-name"><%= user.nameAndLastname %></div>
                      <div class="users-list-date"><%= user.email %></div>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
  <% end %>
</section>
